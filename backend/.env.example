# Database Configuration
MONGODB_URI=mongodb://localhost:27017/media-vault

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=jwt_secret_key_here_change_this_in_production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=google_client_id_here
GOOGLE_CLIENT_SECRET=google_client_secret_here

# Gmail OTP Configuration
GMAIL_USER=gmail_email@gmail.com
GMAIL_PASSWORD=gmail_app_password_here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_NAME=cloudinary_name
CLOUDINARY_API_KEY=cloudinary_api_key
CLOUDINARY_API_SECRET=loudinary_api_secret

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png
